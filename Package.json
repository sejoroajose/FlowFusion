{
  "name": "flowfusion",
  "version": "1.0.0",
  "description": "Multi-Chain TWAP Bridge for Professional Trading",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "yarn@3.6.4",
  "scripts": {
    "install:all": "yarn install",
    "install:contracts": "yarn workspace @flowfusion/ethereum-contracts install",
    "install:web": "yarn workspace @flowfusion/web-app install",
    "build": "yarn build:contracts && yarn build:service && yarn build:web",
    "build:contracts": "yarn workspace @flowfusion/ethereum-contracts compile",
    "build:service": "cd services/bridge-orchestrator && go build -o bin/orchestrator.exe cmd/main.go",
    "build:web": "yarn workspace @flowfusion/web-app build",
    "test": "yarn test:contracts && yarn test:service",
    "test:contracts": "yarn workspace @flowfusion/ethereum-contracts test",
    "test:service": "cd services/bridge-orchestrator && go test ./...",
    "dev:contracts": "yarn workspace @flowfusion/ethereum-contracts node",
    "dev:service": "cd services/bridge-orchestrator && go run cmd/main.go",
    "dev:web": "yarn workspace @flowfusion/web-app start",
    "deploy:local": "yarn workspace @flowfusion/ethereum-contracts deploy:local"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "defi",
    "twap",
    "cross-chain",
    "ethereum",
    "cosmos"
  ],
  "license": "MIT"
}
